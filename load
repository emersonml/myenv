# === CONFIGURAÇÃO DE CORES DO TERMINAL ===
if [ "$TERM" != "dumb" ] && [ -z "$SSH_CONNECTION" ]; then
    # Apenas aplica se não estiver em SSH (opcional, remova se quiser em SSH também)
    printf '\033[44;37m'
    clear  # Limpa a tela para aplicar as cores uniformemente
fi

# Aliases pessoais
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ..='cd ..'
alias ...='cd ../..'
alias cdbk='cd /srv/backups'
alias meuip='curl ipinfo.io/ip'


#OMV 
alias cddt='cd /tanque/docker'

#Docker
alias dps="docker container ps"
alias dlsa="docker container ls -a"
alias di="docker images"
alias dcu="docker compose up -d"
alias dcd="docker compose down"
alias dcdv="docker compose down -v"
alias dcr="docker compose restart"

alias ppp='cd /opt/projects'
alias vvv='cd /srv/docker/volumes'
alias bbb='cd /srv/backups'


# === Redes e Sistema ===
alias meuip='curl -s ipinfo.io/ip'


# Git shortcuts
alias gs='git status'
alias ga='git add .'
alias gc='git commit -m "00000"'
alias gp='git push'
alias gl='git log --oneline --graph --decorate'


# Executa comando, mostra na tela E copia para clipboard
run-and-copy() {
    "$@" | tee /dev/tty | xclip -selection clipboard
    echo "✓ Copiado para clipboard"
}

# Alias mais curto
alias rcopy='run-and-copy'


# ler arq de cores
. ~/.config/myenv/intensivo

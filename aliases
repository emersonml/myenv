alias la='ls -A'
alias l='ls -CF'
alias ..='cd ..'
alias ...='cd ../..'
alias cdbk='cd /srv/backups'
alias meuip='curl ipinfo.io/ip'


#OMV 
alias cddt='cd /tank/docker'

#Docker

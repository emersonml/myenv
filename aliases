# === Redes e Sistema ===
alias meuip='curl -s ipinfo.io/ip'
alias update='sudo apt update && sudo apt upgrade -y'
alias clean='sudo apt autoremove -y && sudo apt autoclean'


# Git shortcuts
alias gs='git status'
alias ga='git add .'
alias gc='git commit -m "00000"'
alias gp='git push'
alias gl='git log --oneline --graph --decorate'


# Executa comando, mostra na tela E copia para clipboard
run-and-copy() {
    "$@" | tee /dev/tty | xclip -selection clipboard
    echo "âœ“ Copiado para clipboard"
}

# Alias mais curto
alias rcopy='run-and-copy'


